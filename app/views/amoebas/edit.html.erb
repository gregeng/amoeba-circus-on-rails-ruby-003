<h3>Edit <%= @amoeba.name %></h3>

<%= form_for(@amoeba) do |f| %>
    <%= f.label(:name) %>
    <%= f.text_field :name %>
    <%= f.label(:talent) %>

      <select id="lives" name="amoeba[talent]">
          <option selected="<%= @amoeba.talent.id %>" value="<%= @amoeba.talent.id %>"><%= @amoeba.talent.name.titleize %></option>
        <% @talents.each do |talent| %>
          <% if talent.id != @amoeba.talent.id %>
            <option value="<%= talent.id %>"><%= talent.name.titleize %></option>
          <% end %>
        <% end %>
      </select>

    <%= f.label(:acts) %>
    <ul>
    <% @acts.each do |act| %>
        <div>
        <%= link_to act.name.titleize, act_path(act) %><br>
        <%= check_box_tag 'amoeba[acts][]', act.id, @amoeba.acts.include?(act), :id => act.name %>
        </div>
        <br>
    <% end %>
    </ul>

    <%= f.hidden_field :generation, value: 1 %>
    <%= f.hidden_field :id %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Back', amoebas_path %>